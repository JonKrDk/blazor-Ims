@inject ILogger<InventoryListItemComponent> Logger

@if (this.Inventory is not null)
{
	<tr>
		<td>@Inventory.Name</td>
		<td>@Inventory.Quantity</td>
		<td>@Inventory.Price</td>
		<td>
			<a 
				class="btn btn-light"
				href="/inventories/edit/@Inventory.Id">Edit</a>
		</td>
	</tr>
}

@code {
	[Parameter]
	public Inventory? Inventory { get; set; }

	protected override void OnInitialized()
	{
		Logger.LogDebug("InventoryListItemComponent initialized for Inventory: {InventoryName}", Inventory?.Name);
		base.OnInitialized();
	}
}
